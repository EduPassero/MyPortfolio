<nav id="nav">
        <div class="brand_cover"></div>
        <img class="nav_brand" height="40" width="40" src="media/img/Me/me_brand.png" />
    <ul class="nav_links">
        @if (english)
        {
            <li><a href="#about" target="_top">About</a></li>
            <li><a href="#experiences" target="_top">Work experience</a></li>
            <li><a href="#projects" target="_top">Projects</a></li>
            <li><a href="/media/files/Eduardo_Passero_Desenvolvedor.pdf" target="_blank">Resume</a></li>
        }
        else
        {
            <li><a href="#about" target="_top">Sobre</a></li>
            <li><a href="#experiences" target="_top">Experiências</a></li>
            <li><a href="#projects" target="_top">Projetos</a></li>
            <li><a href="/media/files/Eduardo_Passero_Desenvolvedor.pdf" target="_blank">Currículo</a></li>
